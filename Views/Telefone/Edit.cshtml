@model CadastroDeContatos.Models.Telefone

<h2>Editar Telefone</h2>

<form asp-controller="Telefone" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Modelo">Modelo:</label>
        <input asp-for="Modelo" class="form-control" />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Marca">Marca:</label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuantidadeDisponivel">Quantidade Disponível:</label>
        <input asp-for="QuantidadeDisponivel" class="form-control" />
        <span asp-validation-for="QuantidadeDisponivel" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
