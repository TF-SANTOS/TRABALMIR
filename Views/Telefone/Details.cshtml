@model CadastroDeContatos.Models.Telefone

<h2>Detalhes do Telefone</h2>

<dl class="row">
    <dt class="col-sm-2">ID:</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Modelo:</dt>
    <dd class="col-sm-10">@Model.Modelo</dd>

    <dt class="col-sm-2">Marca:</dt>
    <dd class="col-sm-10">@Model.Marca</dd>

    <dt class="col-sm-2">Quantidade Disponível:</dt>
    <dd class="col-sm-10">@Model.QuantidadeDisponivel</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</div>
