@model CadastroDeContatos.Models.Telefone

<h2>Excluir Telefone</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Modelo:</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>

        <dt class="col-sm-2">Marca:</dt>
        <dd class="col-sm-10">@Model.Marca</dd>

        <dt class="col-sm-2">Quantidade Disponível:</dt>
        <dd class="col-sm-10">@Model.QuantidadeDisponivel</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Tem certeza de que deseja excluir este telefone?</p>
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index">Cancelar</a>
</form>
