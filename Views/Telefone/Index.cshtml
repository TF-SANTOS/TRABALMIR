@model List<Telefone>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Modelo</th>
            <th>Marca</th>
            <th>Quantidade Disponível</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var telefone in Model)
        {
            <tr>
                <td>@telefone.Modelo</td>
                <td>@telefone.Marca</td>
                <td>@telefone.QuantidadeDisponivel</td>
                <td>
                    <div class="btn-group" role="group">

                        <a class="btn btn-info" asp-action="Details" asp-controller="Telefone" asp-route-id="@telefone.Id">Detalhes</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-controller="Telefone" asp-route-id="@telefone.Id">Editar</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Telefone" asp-route-id="@telefone.Id">Excluir</a>
                        <form asp-action="Comprar" asp-route-id="@telefone.Id" method="post">
                            <button type="submit" class="btn btn-success">Comprar</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text">
    <a class="btn btn-primary" asp-action="Create" asp-controller="Telefone">Novo Telefone</a>
</div>
